{
    "name": "queencitycodefactory/butter-cream",
    "description": "Butter Cream - A CakePHP Bootstrap 4 Theme/Plugin",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "plugin", "booststap", "theme", "front-end"],
    "homepage": "https://github.com/QueenCityCodeFactory/butter-cream",
    "license": "MIT",
    "authors": [
        {
            "name": "Willetts Tech",
            "homepage": "https://www.willettstech.com/"
        }
    ],
    "require": {
        "cakephp/cakephp": "^4.0",
        "friendsofcake/search": "^6.0.0",
        "friendsofcake/bootstrap-ui" : "3.x-dev",
        "friendsofcake/cakepdf": "^4.0.0",
        "queencitycodefactory/cakespreadsheet": "dev-cake-4.x"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.5.0",
        "cakephp/bake": "^2.1",
        "cakephp/cakephp-codesniffer": "^4.1"
    },
    "support": {
        "issues": "https://github.com/QueenCityCodeFactory/butter-cream/issues",
        "source": "https://github.com/QueenCityCodeFactory/butter-cream"
    },
    "autoload": {
        "psr-4": {
            "ButterCream\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ButterCream\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP --ignore=comparisons src/ tests/",
        "cs-fix": "phpcbf --standard=vendor/cakephp/cakephp-codesniffer/CakePHP --ignore=comparisons src/ tests/",
        "stan": "phpstan analyse && psalm.phar",
        "psalm": "psalm.phar",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 psalm/phar:^3.14 && mv composer.backup composer.json",
        "test": "phpunit"
    }
}
